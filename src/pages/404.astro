---
/**
 * ─── 404 Page ───
 * Custom error page with navigation back to safety.
 */
import PageLayout from "@layouts/PageLayout.astro";
---

<PageLayout title="Página no encontrada" description="La página que buscas no existe o fue movida." noindex>
  <section class="error-page section">
    <div class="container" style="text-align: center;">
      <p class="error-page__code">404</p>
      <h1 class="error-page__title">Página no encontrada</h1>
      <p class="error-page__description">
        Lo sentimos, la página que buscas no existe o fue movida a otra dirección.
      </p>
      <a href="/" class="btn btn--primary">Volver al inicio</a>
    </div>
  </section>
</PageLayout>

<style>
  .error-page {
    min-height: 60vh;
    display: flex;
    align-items: center;
  }

  .error-page__code {
    font-size: clamp(5rem, 15vw, 10rem);
    font-weight: 800;
    color: var(--color-border);
    line-height: 1;
  }

  .error-page__title {
    font-size: var(--text-3xl);
    margin-block: var(--space-md);
  }

  .error-page__description {
    font-size: var(--text-lg);
    color: var(--color-text-light);
    margin-block-end: var(--space-xl);
    max-width: 45ch;
    margin-inline: auto;
  }
</style>
