---
/**
 * ─── PageLayout ───
 * Standard page layout with Topbar + Header + main content + Footer.
 * Used for static pages (home, about, services, contact).
 */
import BaseLayout from "./BaseLayout.astro";
import Topbar from "@components/Topbar.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import WhatsAppButton from "@components/WhatsAppButton.astro";
import type { SEOProps } from "@data/site";

type Props = SEOProps & {
  jsonLd?: Record<string, unknown>[];
};

const { jsonLd, ...seoProps } = Astro.props;
---

<BaseLayout {...seoProps} jsonLd={jsonLd}>
  <Topbar />
  <Header />
  <main id="main-content">
    <slot />
  </main>
  <Footer />
  <WhatsAppButton />
</BaseLayout>
