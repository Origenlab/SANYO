---
/**
 * ─── Footer Component ───
 * Footer profesional con información completa de la empresa.
 * Incluye navegación, contacto, cobertura, certificaciones y redes sociales.
 */
import { footerNav } from "@data/navigation";
import { SITE } from "@data/site";

const year = new Date().getFullYear();

const columnTitles: Record<string, string> = {
  servicios: "Servicios",
  equipos: "Equipos",
  empresa: "Empresa",
  legal: "Legal",
};

// Marcas que atendemos
const brands = ["Otis", "Schindler", "KONE", "TK Elevator", "Mitsubishi", "Hitachi", "Fujitec", "Hyundai", "Orona"];
---

<footer class="footer" role="contentinfo">
  <!-- Sección superior: CTA -->
  <div class="footer__cta">
    <div class="container">
      <div class="footer__cta-content">
        <div class="footer__cta-text">
          <span class="footer__cta-badge">Atención 24/7</span>
          <h2 class="footer__cta-title">¿Necesitas servicio urgente?</h2>
          <p class="footer__cta-desc">Técnicos certificados disponibles las 24 horas en todo México</p>
        </div>
        <div class="footer__cta-actions">
          <a href={`tel:${SITE.contact.phoneRaw}`} class="footer__cta-btn footer__cta-btn--phone">
            Llamar ahora
          </a>
          <a href={`https://wa.me/${SITE.contact.whatsapp}`} class="footer__cta-btn footer__cta-btn--whatsapp" target="_blank" rel="noopener">
            WhatsApp
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Contenido principal -->
  <div class="footer__main">
    <div class="container">
      <div class="footer__grid">
        <!-- Columna Brand -->
        <div class="footer__brand">
          <a href="/" class="footer__logo">
            <span class="footer__logo-text">{SITE.name}</span>
          </a>
          <p class="footer__tagline">{SITE.tagline}</p>
          <p class="footer__description">
            Más de 15 años brindando soluciones integrales de transporte vertical en México.
            Servicio multimarca, técnicos certificados y atención 24/7.
          </p>

          <!-- Certificaciones -->
          <div class="footer__certs">
            <div class="footer__cert">
              <span class="footer__cert-code">NOM-207</span>
              <span class="footer__cert-label">Elevadores</span>
            </div>
            <div class="footer__cert">
              <span class="footer__cert-code">NOM-053</span>
              <span class="footer__cert-label">Escaleras</span>
            </div>
          </div>
        </div>

        <!-- Columnas de navegación -->
        {Object.entries(footerNav).map(([key, items]) => (
          <div class="footer__col">
            <h2 class="footer__nav-title">{columnTitles[key] ?? key}</h2>
            <ul class="footer__nav-list" role="list">
              {items.map((item) => (
                <li>
                  <a href={item.href} class="footer__link">{item.label}</a>
                </li>
              ))}
            </ul>
          </div>
        ))}

        <!-- Columna de contacto -->
        <div class="footer__col footer__col--contact">
          <h2 class="footer__nav-title">Contacto</h2>
          <div class="footer__contact-list">
            <a href={`tel:${SITE.contact.phoneRaw}`} class="footer__contact-item">
              {SITE.contact.phone}
            </a>
            <a href={`mailto:${SITE.contact.email}`} class="footer__contact-item">
              {SITE.contact.email}
            </a>
            <a href={`https://wa.me/${SITE.contact.whatsapp}`} class="footer__contact-item" target="_blank" rel="noopener">
              WhatsApp
            </a>
            <span class="footer__contact-item footer__contact-item--address">
              {SITE.contact.address}
            </span>
          </div>

          <!-- Redes sociales -->
          <div class="footer__social">
            <a href={SITE.social.facebook} class="footer__social-link" target="_blank" rel="noopener">
              Facebook
            </a>
            <a href={SITE.social.instagram} class="footer__social-link" target="_blank" rel="noopener">
              Instagram
            </a>
          </div>
        </div>
      </div>

      <!-- Cobertura -->
      <div class="footer__coverage">
        <h3 class="footer__coverage-title">Cobertura nacional</h3>
        <div class="footer__coverage-cities">
          {SITE.areaServed.map((city) => (
            <span class="footer__coverage-city">{city}</span>
          ))}
          <span class="footer__coverage-city footer__coverage-city--more">+ más ciudades</span>
        </div>
      </div>

      <!-- Marcas -->
      <div class="footer__brands">
        <h3 class="footer__brands-title">Servicio multimarca</h3>
        <div class="footer__brands-list">
          {brands.map((brand) => (
            <span class="footer__brand-item">{brand}</span>
          ))}
        </div>
      </div>
    </div>
  </div>

  <!-- Barra inferior -->
  <div class="footer__bottom">
    <div class="container">
      <div class="footer__bottom-content">
        <p class="footer__copyright">
          &copy; {year} {SITE.organization.name}. Todos los derechos reservados.
        </p>
        <div class="footer__bottom-links">
          <a href="/privacidad">Aviso de privacidad</a>
          <span class="footer__bottom-separator">|</span>
          <a href="/terminos">Términos y condiciones</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--color-primary);
    color: #ffffff;
  }

  /* ════════════════════════════════════════════════════════════════════════
     CTA Superior
     ════════════════════════════════════════════════════════════════════════ */

  .footer__cta {
    background: var(--color-accent);
    padding-block: var(--space-xl);
  }

  .footer__cta-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-xl);
  }

  @media (max-width: 768px) {
    .footer__cta-content {
      flex-direction: column;
      text-align: center;
    }
  }

  .footer__cta-badge {
    display: inline-block;
    background: rgba(255, 255, 255, 0.2);
    color: #ffffff;
    font-size: var(--text-xs);
    font-weight: 700;
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-full);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-block-end: var(--space-sm);
  }

  .footer__cta-title {
    font-size: var(--text-xl);
    font-weight: 800;
    color: #ffffff;
    margin: 0;
  }

  .footer__cta-desc {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
    margin-block-start: var(--space-xs);
  }

  .footer__cta-actions {
    display: flex;
    gap: var(--space-md);
    flex-shrink: 0;
  }

  @media (max-width: 480px) {
    .footer__cta-actions {
      flex-direction: column;
      width: 100%;
    }
  }

  .footer__cta-btn {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-xl);
    border-radius: var(--radius-md);
    font-size: var(--text-sm);
    font-weight: 700;
    text-decoration: none;
    transition: transform var(--transition-fast), background-color var(--transition-fast);
  }

  .footer__cta-btn:hover {
    transform: translateY(-2px);
  }

  .footer__cta-btn--phone {
    background: #ffffff;
    color: var(--color-accent);
  }

  .footer__cta-btn--phone:hover {
    background: #f8f9fa;
  }

  .footer__cta-btn--whatsapp {
    background: #25D366;
    color: #ffffff;
  }

  .footer__cta-btn--whatsapp:hover {
    background: #128C7E;
  }

  /* ════════════════════════════════════════════════════════════════════════
     Contenido Principal
     ════════════════════════════════════════════════════════════════════════ */

  .footer__main {
    padding-block: var(--space-4xl);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1.5fr repeat(4, 1fr) 1.2fr;
    gap: var(--space-2xl);
  }

  @media (max-width: 1024px) {
    .footer__grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .footer__brand {
      grid-column: 1 / -1;
      margin-block-end: var(--space-xl);
    }
  }

  @media (max-width: 640px) {
    .footer__grid {
      grid-template-columns: 1fr 1fr;
    }

    .footer__col--contact {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 480px) {
    .footer__grid {
      grid-template-columns: 1fr;
    }
  }

  /* Brand Column */
  .footer__logo {
    display: inline-block;
    text-decoration: none;
    margin-block-end: var(--space-md);
  }

  .footer__logo-text {
    font-size: var(--text-2xl);
    font-weight: 800;
    color: #ffffff;
    letter-spacing: 0.02em;
  }

  .footer__tagline {
    font-size: var(--text-base);
    color: var(--color-accent);
    font-weight: 600;
    margin-block-end: var(--space-md);
  }

  .footer__description {
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.8);
    line-height: 1.7;
    margin-block-end: var(--space-xl);
  }

  /* Certificaciones */
  .footer__certs {
    display: flex;
    gap: var(--space-md);
  }

  .footer__cert {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-md);
    padding: var(--space-md);
    min-width: 90px;
  }

  .footer__cert-code {
    font-size: var(--text-sm);
    font-weight: 800;
    color: var(--color-accent);
  }

  .footer__cert-label {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.7);
    margin-block-start: var(--space-xs);
  }

  /* Nav Columns */
  .footer__nav-title {
    font-size: var(--text-sm);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #ffffff;
    margin-block-end: var(--space-lg);
  }

  .footer__nav-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer__link {
    color: rgba(255, 255, 255, 0.75);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer__link:hover {
    color: #ffffff;
  }

  /* Contact Column */
  .footer__contact-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    margin-block-end: var(--space-xl);
  }

  .footer__contact-item {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer__contact-item:hover {
    color: #ffffff;
  }

  .footer__contact-item--address {
    color: rgba(255, 255, 255, 0.7);
  }

  /* Social Links */
  .footer__social {
    display: flex;
    gap: var(--space-md);
  }

  .footer__social-link {
    color: rgba(255, 255, 255, 0.75);
    text-decoration: none;
    font-size: var(--text-sm);
    transition: color var(--transition-fast);
  }

  .footer__social-link:hover {
    color: #ffffff;
  }

  /* ════════════════════════════════════════════════════════════════════════
     Cobertura
     ════════════════════════════════════════════════════════════════════════ */

  .footer__coverage {
    margin-block-start: var(--space-3xl);
    padding-block-start: var(--space-2xl);
    border-block-start: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer__coverage-title {
    font-size: var(--text-sm);
    font-weight: 700;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-block-end: var(--space-md);
  }

  .footer__coverage-cities {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }

  .footer__coverage-city {
    background: rgba(255, 255, 255, 0.08);
    color: rgba(255, 255, 255, 0.85);
    font-size: var(--text-sm);
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-full);
  }

  .footer__coverage-city--more {
    background: transparent;
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: rgba(255, 255, 255, 0.6);
  }

  /* ════════════════════════════════════════════════════════════════════════
     Marcas
     ════════════════════════════════════════════════════════════════════════ */

  .footer__brands {
    margin-block-start: var(--space-xl);
  }

  .footer__brands-title {
    font-size: var(--text-sm);
    font-weight: 700;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-block-end: var(--space-md);
  }

  .footer__brands-list {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-lg);
  }

  .footer__brand-item {
    color: rgba(255, 255, 255, 0.5);
    font-size: var(--text-sm);
    font-weight: 600;
  }

  /* ════════════════════════════════════════════════════════════════════════
     Barra Inferior
     ════════════════════════════════════════════════════════════════════════ */

  .footer__bottom {
    background: rgba(0, 0, 0, 0.2);
    padding-block: var(--space-lg);
  }

  .footer__bottom-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-lg);
  }

  @media (max-width: 640px) {
    .footer__bottom-content {
      flex-direction: column;
      text-align: center;
    }
  }

  .footer__copyright {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.6);
    margin: 0;
  }

  .footer__bottom-links {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }

  .footer__bottom-links a {
    font-size: var(--text-xs);
    color: rgba(255, 255, 255, 0.6);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer__bottom-links a:hover {
    color: #ffffff;
  }

  .footer__bottom-separator {
    color: rgba(255, 255, 255, 0.3);
  }
</style>
