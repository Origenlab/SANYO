---
/**
 * ─── Card Component ───
 * Componente de card reutilizable para todo el sitio.
 * Diseño consistente para marcas, servicios, equipos, etc.
 */

interface Props {
  /** Título principal (logo/nombre) */
  title: string;
  /** Subtítulo o badge */
  subtitle?: string;
  /** Texto de la imagen placeholder */
  imagePlaceholder?: string;
  /** URL de la imagen (cuando esté disponible) */
  image?: string;
  /** Alt text para la imagen */
  imageAlt?: string;
  /** Descripción/extracto */
  description: string;
  /** Texto del botón CTA */
  ctaText?: string;
  /** URL del botón CTA */
  ctaHref?: string;
  /** Variante de color del header: 'primary' | 'accent' */
  variant?: 'primary' | 'accent';
  /** Número para mostrar en lugar del título (opcional) */
  number?: number;
}

const {
  title,
  subtitle,
  imagePlaceholder,
  image,
  imageAlt,
  description,
  ctaText,
  ctaHref = '#cotizador',
  variant = 'primary',
  number,
} = Astro.props;

const headerClass = variant === 'accent' ? 'card-pro__visual--accent' : '';
---

<article class="card-pro">
  <div class={`card-pro__visual ${headerClass}`}>
    <div class="card-pro__header">
      {number ? (
        <span class="card-pro__number">{number}</span>
      ) : null}
      <span class="card-pro__title">{title}</span>
    </div>
    {subtitle && (
      <div class="card-pro__badge">{subtitle}</div>
    )}
    <div class="card-pro__image">
      {image ? (
        <img src={image} alt={imageAlt || title} class="card-pro__img" loading="lazy" />
      ) : (
        <span class="card-pro__image-text">{imagePlaceholder || `Imagen ${title}`}</span>
      )}
    </div>
  </div>
  <div class="card-pro__content">
    <p class="card-pro__description">{description}</p>
  </div>
  {ctaText && (
    <div class="card-pro__footer">
      <a href={ctaHref} class="card-pro__cta">{ctaText}</a>
    </div>
  )}
</article>

<style>
  .card-pro {
    background: #ffffff;
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: 0 2px 12px rgba(27, 42, 74, 0.06);
    border: 1px solid rgba(27, 42, 74, 0.08);
    display: flex;
    flex-direction: column;
  }

  /* Sección visual */
  .card-pro__visual {
    background: var(--color-primary);
  }

  .card-pro__visual--accent {
    background: var(--color-accent);
  }

  .card-pro__header {
    padding: var(--space-lg);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
  }

  .card-pro__number {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: var(--color-accent);
    color: #ffffff;
    font-size: var(--text-base);
    font-weight: 800;
    border-radius: var(--radius-sm);
    flex-shrink: 0;
  }

  .card-pro__visual--accent .card-pro__number {
    background: var(--color-primary);
  }

  .card-pro__title {
    font-size: var(--text-xl);
    font-weight: 800;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .card-pro__badge {
    background: var(--color-accent);
    color: #ffffff;
    font-size: var(--text-xs);
    font-weight: 700;
    text-align: center;
    padding: var(--space-sm) var(--space-md);
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }

  .card-pro__visual--accent .card-pro__badge {
    background: var(--color-primary);
  }

  .card-pro__image {
    background: #e2e6ea;
    height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .card-pro__img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .card-pro__image-text {
    font-size: var(--text-sm);
    color: #6c757d;
    font-weight: 500;
  }

  /* Contenido */
  .card-pro__content {
    padding: var(--space-xl);
    flex-grow: 1;
  }

  .card-pro__description {
    font-size: var(--text-sm);
    color: var(--color-text-light);
    line-height: 1.7;
    margin: 0;
  }

  /* Footer con CTA */
  .card-pro__footer {
    padding: var(--space-lg);
    padding-top: 0;
  }

  .card-pro__cta {
    display: block;
    width: 100%;
    text-align: center;
    padding: var(--space-md) var(--space-lg);
    font-size: var(--text-sm);
    font-weight: 700;
    color: var(--color-primary);
    background: transparent;
    border: 2px solid var(--color-primary);
    border-radius: var(--radius-md);
    text-decoration: none;
    cursor: pointer;
    transition: background-color var(--transition-fast), color var(--transition-fast), transform var(--transition-fast);
  }

  .card-pro__cta:hover {
    background: var(--color-primary);
    color: #ffffff;
    transform: translateY(-2px);
  }
</style>
